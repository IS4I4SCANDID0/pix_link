{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "cypress/e2e/donation-security.cy.ts",
    "cypress/e2e/payload-generation.cy.ts",
    "cypress/e2e/rate-limit.cy.ts",
    "cypress/e2e/**/*.cy.ts"
  ],
  "exclude": ["cypress", "node_modules", "cypress/**/*", "src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
